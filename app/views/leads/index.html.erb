<h1>Listing leads</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Message</th>
  </tr>

<% @leads.each do |lead| %>
  <tr>
    <td><%=h lead.name %></td>
    <td><%=h lead.email %></td>
    <td><%=h lead.phone %></td>
    <td><%=h lead.message %></td>
    <td><%= link_to 'Show', lead %></td>
    <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
    <td><%= link_to 'Destroy', lead, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New lead', new_lead_path %>